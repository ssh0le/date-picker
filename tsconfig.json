{
  "compilerOptions": {
      "baseUrl": ".",
      "paths": {
          "@/*": [
              "./src/*"
          ]
      },
      "outDir": "lib",
      "isolatedModules": true,
      "sourceMap": true,
      "noImplicitAny": true,
      "target": "ESNext",
      "module": "ESNext",
      "declaration": true,
      "esModuleInterop": true,
      "strict": true,
      "jsx": "react",
      "allowJs": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "declarationDir": "lib",
      "skipLibCheck": true,
  },
  "include": [
      "./src/**/*.tsx",
      "./src/**/*.ts",
      "./src/**/*.d.ts",
      "./custom.d.ts",
  ],
}